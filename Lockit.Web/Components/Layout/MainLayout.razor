@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider @bind-IsDarkMode="_isDarkMode" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Elevation="2">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
		<MudText Typo="Typo.h6">Lockit</MudText>
		<MudSpacer />
		<MudMenu Variant="Variant.Text" Size="Size.Medium" Color="Color.Inherit" Icon="@Icons.Material.TwoTone.MoreVert" AnchorOrigin="Origin.BottomCenter">
			<MudMenu StartIcon="@Icons.Material.Filled.Language" IconColor="Color.Primary" Label="Language" >
				<MudMenuItem IconColor="Color.Secondary"><Blazicon Svg="FlagIcon4x3.Gb"/>  English</MudMenuItem>
				<MudMenuItem IconColor="Color.Secondary"><Blazicon Svg="FlagIcon4x3.Nl"/>  Nederlands</MudMenuItem>
				<MudMenuItem IconColor="Color.Secondary"><Blazicon Svg="FlagIcon4x3.Fr"/>  French</MudMenuItem>
			</MudMenu>

			<MudMenuItem Icon="@Icons.Material.TwoTone.DarkMode" IconColor="Color.Secondary" OnClick="() => _isDarkMode = !_isDarkMode">
				<MudSwitch @bind-Value="_isDarkMode" T="bool" Label="Dark Theme" Color="Color.Primary" />
			</MudMenuItem>
		</MudMenu>
	</MudAppBar>
	<MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="15" >
		<MudDrawerContainer>
			<NavMenu/>
		</MudDrawerContainer>
	</MudDrawer>
	<MudMainContent>
		<MudPaper Class="pa-2 ma-5" Elevation="3">
			@Body
		</MudPaper>
	</MudMainContent>
</MudLayout>

@code{
	private bool _drawerOpen = false;
	private bool _isDarkMode = false;
	private void DrawerToggle()
	{
		_drawerOpen = !_drawerOpen;
	}
}
